{
    "manifest_version": 2,
  
    "name": "extension",
    "description": "extension description.",
    "version": "0.1",
    "icons": {
      "128": "res/icon128.png",
      "48": "res/icon48.png",
      "16": "res/icon16.png"
    },
  
    "page_action": {
      "default_icon": "res/icon16.png",
      "default_title": "Capytrack",
      "default_popup": "popup.html"
    },

    "content_scripts": [
      {
        "matches": [
          "https://www.mercadolibre.com.ar/*", 
          "https://www.mercadolibre.com.bo/*", 
          "https://www.mercadolibre.com.br/*",
          "https://www.mercadolibre.com.cl/*",
          "https://www.mercadolibre.com.co/*",
          "https://www.mercadolibre.com.ec/*",
          "https://www.mercadolibre.com.do/*",
          "https://articulo.mercadolibre.com.ar/*",
          "https://articulo.mercadolibre.com.bo/*", 
          "https://articulo.mercadolibre.com.br/*",
          "https://articulo.mercadolibre.com.cl/*",
          "https://articulo.mercadolibre.com.co/*",
          "https://articulo.mercadolibre.com.ec/*",
          "https://articulo.mercadolibre.com.do/*"
        ],
        "js": ["js/content.js", "js/jquery-3.5.1.min.js"]
      }
    ],
  
    "background": {
      "scripts": ["js/eventPage.js"],
      "persistent": false
    },
  
    "permissions": [
            "storage",
            "notifications",
            "contextMenus",
            "tabs",
            "https://www.mercadolibre.com.ar/*", 
            "https://www.mercadolibre.com.bo/*", 
            "https://www.mercadolibre.com.br/*",
            "https://www.mercadolibre.com.cl/*",
            "https://www.mercadolibre.com.co/*",
            "https://www.mercadolibre.com.ec/*",
            "https://www.mercadolibre.com.do/*",
            "https://articulo.mercadolibre.com.ar/*",
            "https://articulo.mercadolibre.com.bo/*", 
            "https://articulo.mercadolibre.com.br/*",
            "https://articulo.mercadolibre.com.cl/*",
            "https://articulo.mercadolibre.com.co/*",
            "https://articulo.mercadolibre.com.ec/*",
            "https://articulo.mercadolibre.com.do/*"           
          ],
  
    "options_page": "options.html"
  }