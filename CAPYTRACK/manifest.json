{
    "manifest_version": 2,
  
    "name": "extension",
    "description": "extension description.",
    "version": "0.1",
    "icons": {
      "128": "res/icon128.png",
      "48": "res/icon48.png",
      "16": "res/icon16.png"
    },
  
    "browser_action": {
      "default_icon": "res/icon16.png",
      "default_popup": "popup.html"
    },
  
    "background": {
      "scripts": ["js/eventPage.js"],
      "persistent": false
    },
  
    "permissions": [
            "storage",
            "notifications",
            "contextMenus",
            "tabs"
          ],
  
    "options_page": "options.html"
  }